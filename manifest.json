{
  "manifest_version": 3,
  "name": "Buffer Plus",
  "version": "1.0",
  "description": "A browser tab pluged buffer for copy and storage files, images, text...",
  "icons": {
    "16": "icons/icon16.ico",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
